{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "redirects": [
        {
            "source": "/",
            "destination": "/Sauvage/",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/Sauvage/(.*)",
            "destination": "/Sauvage/index.html"
        }
    ],
    "env": {
        "MAIL_API_URL": "https://sauvage-watches-mail-server.onrender.com"
    }
}